    # modify the x/ythickness, used for spacing all over the place
    xthickness = 10
    ythickness = 10

    # one can set so called "style properties"
    GtkRange::slider-width = 15

    # set the background to a light grey
    bg[NORMAL] = "#f6f6f6"
    # and the forground to black
    fg[NORMAL] = "#000000"
                
	GtkTreeView::grid-line-pattern = "\111\001"	
	#GtkTreeView::grid-line-pattern = "\111\111"

	#to change the color of each line even/odd
	GtkTreeView::allow-rules = 1
	GtkTreeView::odd-row-color 		= "white"
	GtkTreeView::even-row-color  	= "#f6f6f6"
	GtkTreeView::tree-line-width = 5
	GtkTreeView::grid-line-width = 1
}
